<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Game: "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/game_start_time_text_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:text="Game time: "/>

        <TextView
            android:id="@+id/game_start_time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_toRightOf="@id/game_start_time_text_display"
            android:layout_marginLeft="16dp"
            android:textColor="@color/primary" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/venue_text_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Venue :"
            android:textSize="24sp"
            android:layout_weight="3"
            />

        <TextView

            android:id="@+id/venue_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/venue_text_display"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/host_text_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Host :"
            android:textSize="24sp"
            android:layout_weight="3"/>

        <TextView

            android:id="@+id/host_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_toRightOf="@id/host_text_display"
            android:layout_marginLeft="16dp"
            android:textColor="@color/primary" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/visitor_text_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Visitor :"
            android:textSize="24sp"
            android:layout_weight="3"/>

        <TextView

            android:id="@+id/visitor_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:layout_toRightOf="@id/visitor_text_display"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ticket_price_text_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Ticket price: "
            android:layout_weight="3"/>

        <TextView

            android:id="@+id/ticket_price_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/ticket_price_text_display"
            android:layout_marginLeft="16dp"
            android:textColor="@color/primary" />

    </RelativeLayout>

</LinearLayout>